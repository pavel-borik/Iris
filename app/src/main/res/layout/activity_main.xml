<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
        android:layout_height="match_parent">

    <TextView
            android:layout_width="229dp"
            android:layout_height="wrap_content"
            android:text="@string/instruction_no_permissions"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" android:id="@+id/instructionsTextView"
            android:textAlignment="center"/>
    <Button
            android:text="@string/start_recognition"
            android:layout_width="136dp"
            android:layout_height="wrap_content" android:id="@+id/mainStartButton"
            android:layout_marginTop="50dp"
            app:layout_constraintTop_toBottomOf="@+id/instructionsTextView" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintHorizontal_bias="0.499"
    />

    <Button
            android:text="@string/request_permisions"
            android:layout_width="136dp"
            android:layout_height="wrap_content" android:id="@+id/mainPermissionsButton"
            android:layout_marginTop="50dp"
            app:layout_constraintTop_toBottomOf="@+id/instructionsTextView" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintHorizontal_bias="0.499"
    />

</android.support.constraint.ConstraintLayout>